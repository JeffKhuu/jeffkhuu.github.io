---
const { title, description, link, thumbnail } = Astro.props;
---

<a href={link} class="hover-highlight no-underline group">
    <div class="border-2 rounded-md aspect-video">
        <div class="overflow-hidden border-b-2 w-full h-2/3">
            <img
                src={thumbnail}
                class="object-cover transition-transform ease-in-out duration-300 scale-100 group-hover:scale-125"
            />
        </div>
        <div class="line-clamp-3 p-2 h-1/3">
            <b>{title}</b> - <i>{description}</i>
        </div>
    </div>
</a>
