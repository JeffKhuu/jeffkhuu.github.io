---
import "../global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const { showHeaderFooter = true, widenPage = false } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Playpen+Sans:wght@100..800&display=swap"
            rel="stylesheet"
        />
        <!-- Icons -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css"
        />

        <title>Jeff Khuu's Corner</title>
    </head>
    <body>
        {showHeaderFooter && <Header />}
        {
            widenPage ? (
                <main class="w-md lg:w-5xl">
                    <slot />
                </main>
            ) : (
                <main>
                    <slot />
                </main>
            )
        }
        {showHeaderFooter && <Footer />}
    </body>
</html>
